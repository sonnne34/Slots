<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    tools:context=".LotteryActivity">

    <TextView
        android:id="@+id/txt_lottery_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_a_box"
        android:textColor="@color/primary_dark"
        android:textSize="30sp"
        android:layout_margin="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_lottery_one"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/accent"
        android:text="@string/btn_lottery_q"
        android:textColor="@color/icons"
        android:textSize="50sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_lottery_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_lottery_header" />

    <Button
        android:id="@+id/btn_lottery_two"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/accent"
        android:text="@string/btn_lottery_q"
        android:textColor="@color/icons"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_lottery_three"
        app:layout_constraintStart_toEndOf="@+id/btn_lottery_one"
        app:layout_constraintTop_toBottomOf="@+id/txt_lottery_header" />

    <Button
        android:id="@+id/btn_lottery_three"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/accent"
        android:text="@string/btn_lottery_q"
        android:textColor="@color/icons"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_lottery_two"
        app:layout_constraintTop_toBottomOf="@+id/txt_lottery_header" />

    <TextView
        android:id="@+id/txt_reward_lottery_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/primary"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/btn_lottery_one"
        app:layout_constraintStart_toStartOf="@+id/btn_lottery_one"
        app:layout_constraintTop_toBottomOf="@+id/btn_lottery_one" />

    <TextView
        android:id="@+id/txt_reward_lottery_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/primary"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/btn_lottery_two"
        app:layout_constraintStart_toStartOf="@+id/btn_lottery_two"
        app:layout_constraintTop_toBottomOf="@+id/btn_lottery_two" />

    <TextView
        android:id="@+id/txt_reward_lottery_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/primary"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/btn_lottery_three"
        app:layout_constraintStart_toStartOf="@+id/btn_lottery_three"
        app:layout_constraintTop_toBottomOf="@+id/btn_lottery_three" />

</androidx.constraintlayout.widget.ConstraintLayout>